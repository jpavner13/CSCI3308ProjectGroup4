<%- include ('../partials/header') %>


<div class="container mx-0">
  <div class="row">
    <div class="col px-0">
      <img class="vh-100 mx-0" src="https://images.unsplash.com/photo-1566895291281-ea63efd4bdbc?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8OHx8OSUzQTE2fGVufDB8fDB8fA%3D%3D&w=1000&q=80" />
    </div>
    <div class="col mt-5">
      <h1 class="mb-5 mt-5">Log In</h1>
      <form action="/login" method="POST">
        <div class="mb-3">
          <input placeholder="Username" name="username" id="username" type="text" class="form-control" required>
        </div>
        <div class="mb-3">
          <input placeholder="Password" name="password" id="password" type="password" class="form-control" required>
        </div>
        <div class="mb-4">
          <span class="form-text">Don't have an account? <a href="/register">Register.</a></span>
        </div>
        <button type="submit" class="btn btn-primary">Log In</button>
      </form>
    </div>
  </div>
</div>


<%- include ('../partials/footer') %>
