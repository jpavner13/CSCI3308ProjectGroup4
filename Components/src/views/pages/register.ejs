<%- include ('../partials/header') %>

<div class="container mx-0">

  <div class="row">

    <div class="col px-0">
      <img class="vh-100 mx-0" alt="Welcome Image" src="https://images.unsplash.com/photo-1566895291281-ea63efd4bdbc?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8OHx8OSUzQTE2fGVufDB8fDB8fA%3D%3D&w=1000&q=80">
    </div>

    <div class="col mt-5">

      <h1 class="mb-5 mt-5">Account Registration</h1>

      <div class="row"><%- include ('../partials/message') %></div>

      <form action="/register" method="POST">

        <h5 class="">Required Information</h3>

        <div class="row">
          <div class="col">
            <div class="mb-3">
              <!-- <label for="firstname" class="form-label">First Name</label> -->
              <input placeholder="First Name" type="text" name="firstname" class="form-control" id="firstname" aria-describedby="firstnamehelp" required>
              <!-- <div id="firstnamehelp" class="form-text">Enter your name.</div> -->
            </div>
          </div>

          <div class="col">
            <div class="mb-3">
              <!-- <label for="lastname" class="form-label">Last Name</label> -->
              <input placeholder="Last Name" type="text" name="lastname" class="form-control" id="lastname" aria-describedby="lastnamehelp" required>
              <!-- <div id="lastnamehelp" class="form-text">Enter your name.</div> -->
            </div>
          </div>
        </div>

        <div class="row">
          <div class="mb-3">
            <!-- <label for="email" class="form-label">Email Address</label> -->
            <input placeholder="Email Address" type="email" name="email" class="form-control" id="email" aria-describedby="emailhelp" required>
            <!-- <div id="emailhelp" class="form-text">Enter a valid email address.</div> -->
          </div>
        </div>

        <div class="row">
          <div class="col">
            <div class="mb-3">
              <!-- <label for="username" class="form-label">Username</label> -->
              <input placeholder="Username" type="text" name="username" class="form-control" id="username" aria-describedby="usernamehelp" required>
              <!-- <div id="usernamehelp" class="form-text">Enter your new username.</div> -->
            </div>
          </div>

          <div class="col">
            <div class="mb-3">
              <!-- <label for="password" class="form-label">Password</label> -->
              <input placeholder="Password" type="password" name="password" class="form-control" id="password" aria-describedby="passwordhelp" required>
              <!-- <div id="passwordhelp" class="form-text">Create a strong password.</div> -->
            </div>
          </div>

        </div>

        <div class="mb-3">
          <!-- <label for="location" class="form-label">Your Location</label> -->
          <input placeholder="Your Location" type="text" name="location" class="form-control" id="location" aria-describedby="locationhelp" required>
          <!-- <div id="locationhelp" class="form-text">Where would you like to be a guide?</div> -->
        </div>
        
        <br>
        <h5>Optional Information</h5>

        <div class="row">
          <div class="col">
            <div class="mb-3">
              <input placeholder="000-000-0000" type="tel" name="phonenum" class="form-control" id="phone" aria-describedby="phonehelp" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}">
            </div>
          </div>

          <div class="col">
            <div class="mb-3">
              <input placeholder="@Twitter" type="text" name="twitter" class="form-control" id="twitter" aria-describedby="twitterhelp" pattern="@.{4,15}">
            </div>
          </div>

        </div>

        <div class="mb-3">
          <input placeholder="Facebook Profile URL" type="url" name="facebook" class="form-control" id="facebook" aria-describedby="facebookhelp">
        </div>

        <br>
        <button type="submit" class="btn btn-primary">Register me!</button>

        <div class="mb-4">
          <span class="form-text">Already have an account? <a href="/login">Login.</a></span>
        </div>

      </form>

    </div>

  </div>

</div>

<%- include ('../partials/footer') %>